@model IEnumerable<SchoolChoicePlayground.Models.School>
@{
    ViewBag.Title = "Home";
}
<div id="allSchoolsWrapper" ng-controller="AllSchoolsController">
    <h3>{{title}}</h3>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div id="allSchoolsTable">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>School Name</th>
                            <th>Grades</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="@item.SchoolId" ng-click="showSchoolProfile()">
                                <th></th>
                                <td>@item.name</td>
                                <td>@item.grades</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
</div>


