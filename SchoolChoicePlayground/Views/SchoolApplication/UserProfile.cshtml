@model  SchoolChoicePlayground.Models.MyUser
@{
    ViewBag.Title = "Profile";
}
<div id="profileWrapper" ng-controller="UserProfileController">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div id="profileInfo">
                <h2 ng-model="user.name"></h2>
                <label>Email: </label>
                <div ng-model="user.email"></div>
                <label>Phone number: </label>
                <div ng-model="user.phoneNum"></div>
                <label>Alerts: </label>
                <div ng-model="user.alerts"></div>
                <div id="userId">@Model.AspUser</div>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
</div>
